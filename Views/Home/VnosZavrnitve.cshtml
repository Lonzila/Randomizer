@{
    ViewData["Title"] = "Vnos Zavrnitve";
}

<h2>Vnos Zavrnitve</h2>

<form asp-action="VnosZavrnitve" method="post" class="mt-3">
    <div class="form-group">
        <label for="sifraRecenzenta">Šifra Recenzenta:</label>
        <input type="text" class="form-control" id="sifraRecenzenta" name="sifraRecenzenta" required>
    </div>
    <div class="form-group">
        <label for="stevilkaPrijave">Številka Prijave:</label>
        <input type="text" class="form-control" id="stevilkaPrijave" name="stevilkaPrijave" required>
    </div>
    <div class="form-group">
        <label for="razlogZavrnitve">Razlog Zavrnitve:</label>
        <input type="text" class="form-control" id="razlogZavrnitve" name="razlogZavrnitve">
    </div>
    <button type="submit" class="btn btn-primary">Dodaj Zavrnitev</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}
